{
  "scheme": "org_semantic",
  "versionFile": "./Sources/Passage/Resources/settings.json",
  "files": ["./Sources/Passage/Resources/settings.json"],
  "rules": [
    {
      "trigger": "commit",
      "branch": "PSG-1550-testing",
      "suffix": "-${process.env.BUMP_SUFFIX}"
    },
    {
      "trigger": "pull-request",
      "destBranch": "main",
      "suffix": "-${process.env.BUMP_SUFFIX}",
      "tag": false
    },
    {
      "trigger": "commit",
      "branch": "release",
      "bump": "major",
      "tag": true,
      "reset": ["minor", "build"]
    }
  ]
}
